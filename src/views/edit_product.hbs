{{>sidebar}}
<div class="main-panel">
    {{>  nav}}
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-info">
                            <h3 class="card-title ">Update information Product</h3>
                        </div>
                        <div class="card-body">
                            {{> messages}}
                            <form action="" method="POST" enctype="multipart/form-data">
                            
                                <div class="col-lg-2 col-md-6 col-sm-6 ">
                                    <div class="card card-stats">
                                        <img class="card-img-top" src="/images/{{this.product.image_path}}" />
                                    </div>
                                </div>
                                <label for="customer-img"><b>Chose new product image</b></label><br>

                                <input type="file" name="image" id="customer-img" class="form-group"/>
                                <label for="customer-img2"><b>Chose new product image 2</b></label><br>

                                <input type="file" name="image2" id="customer-img2" class="form-group"/>
                                <div class="form-group">
                                    <label for="product_name" class="bmd-label-floating">Product Name</label>
                                    <input type="text" value="{{this.product.product_name}}" class="form-control" id="product_name"name="product_name" required>
                                </div>

                                <div class="form-group">
                                    <label for="over_view" class="bmd-label-floating">Over view</label>
                                    <textarea id="over_view" class="form-control" name="over_view" cols="40"
                                        rows="5">{{this.product.over_view}}</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="vote_average" class="bmd-label-floating">Vote Average</label>
                                    <input type="number" value="{{this.product.vote_average}}" class="form-control" id="vote_average"
                                        name="vote_average" required>
                                </div>
                                <div class="form-group">
                                    <label for="quantity" class="bmd-label-floating">Quantity</label>
                                    <input type="number" value="{{this.product.quantity}}" class="form-control" id="quantity"
                                        name="quantity" required>
                                </div>
                                <div class="form-group">
                                    <label for="category" class="bmd-label-floating">Category:</label>
                                    <select id="category-select" name="category" class="custom-select set-genre ">
                                        {{#isSelected_category this.product.category}}
                                        <option selected>Open this select new category</option>
                                        <option value="Promotion">Promotion</option>
                                        <option value="Hot">Hot</option>
                                        <option value="Selling">Selling</option>
                                        <option value="Top rated">Top rated</option>
                                        <option value="Good price">Good price</option>
                                        {{/isSelected_category}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input type="date" value="{{this.product.release_date}}" class="form-control" id="release_date"
                                        name="release_date" required>
                                </div>
                                <div class="form-group">
                                    <label for="genre" class="bmd-label-floating">Genres:</label>
                                    <select id="genre" name="genre" class="custom-select ">
                                        <option selected>Open this select new genre</option>
                                        {{#each genres}}
                                        <option value="{{genre_id}}" {{{isSelected_genre ../this.product.genre genre_id}}}>
                                            {{genre_name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="producer" class="bmd-label-floating">Production companies</label>
                                    <select id="producer" name="producer" class="custom-select custom-select">
                                        <option selected>Open this select production company</option>
                                        {{#each producers}}
                                        <option value="{{producer_id}}"
                                            {{{isSelected_prodution ../this.product.producer producer_id}}}>{{producer_name}}
                                        </option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="price" class="bmd-label-floating">Price</label>
                                    <input type="number" value="{{this.product.price}}" class="form-control" id="price" name="price"
                                        required>
                                </div>
                                <div>
                                    <div class="col-sm">
                                        <button type="submit" class="btn btn-success float-right">Submit</button>
                                        <a href="products" class="btn btn-danger float-right">Cancel</a>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{> footer}}
</div>